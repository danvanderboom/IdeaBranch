<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IdeaBranch.App"
             xmlns:converters="clr-namespace:IdeaBranch.App.Converters"
             x:Class="IdeaBranch.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:DepthToThicknessConverter x:Key="DepthToThickness" />
            <converters:NodePayloadTitleConverter x:Key="NodePayloadTitle" />
            <converters:NodePayloadPromptConverter x:Key="NodePayloadPrompt" />
            <converters:CountToBoolConverter x:Key="CountToBool" />
            <converters:NodePayloadDomainIdConverter x:Key="NodePayloadDomainId" />
            <converters:TagTaxonomyNameConverter x:Key="TagTaxonomyName" />
            <converters:TagTaxonomyDomainIdConverter x:Key="TagTaxonomyDomainId" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:InvertedBoolToFontAttributesConverter x:Key="InvertedBoolToFontAttributesConverter" />
            <converters:StringEqualityToBoolConverter x:Key="StringToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
