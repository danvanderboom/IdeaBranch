<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:IdeaBranch.App.ViewModels"
             xmlns:res="clr-namespace:IdeaBranch.App.Resources"
             x:Class="IdeaBranch.App.Views.MapPage"
             x:DataType="vm:MapViewModel"
             Title="{x:Static res:AppResources.MapPage_Title}"
             AutomationId="MapPage">
    <Grid RowDefinitions="Auto,*">
        <!-- Export Buttons -->
        <Border Grid.Row="0" BackgroundColor="{StaticResource Secondary}" Padding="10" StrokeThickness="1" Stroke="{StaticResource Gray500}">
            <HorizontalStackLayout Spacing="10">
                <Button Text="Export PNG" 
                       Command="{Binding ExportPngCommand}" 
                       IsEnabled="{Binding IsExporting, Converter={StaticResource InvertedBoolConverter}}" />
                <Button Text="Export SVG" 
                       Command="{Binding ExportSvgCommand}" 
                       IsEnabled="{Binding IsExporting, Converter={StaticResource InvertedBoolConverter}}" />
                <ActivityIndicator IsRunning="{Binding IsExporting}" 
                                  IsVisible="{Binding IsExporting}" 
                                  HeightRequest="20" 
                                  WidthRequest="20" />
                <Label Text="Exporting..." 
                      IsVisible="{Binding IsExporting}" 
                      VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Border>

        <!-- Map Content -->
        <Grid Grid.Row="1">
            <Label Text="{x:Static res:AppResources.MapPage_Content}"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   AutomationId="MapPage_Content"
                   SemanticProperties.HeadingLevel="Level1"
                   SemanticProperties.Description="Map view showing the visual representation of topic relationships" />
        </Grid>
    </Grid>
</ContentPage>
