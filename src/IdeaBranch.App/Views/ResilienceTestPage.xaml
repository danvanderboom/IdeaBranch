<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:IdeaBranch.App.ViewModels"
             xmlns:res="clr-namespace:IdeaBranch.App.Resources"
             x:Class="IdeaBranch.App.Views.ResilienceTestPage"
             x:DataType="vm:ResilienceTestViewModel"
             Title="{x:Static res:AppResources.ResilienceTestPage_Title}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Status Label -->
            <Label Text="{x:Static res:AppResources.ResilienceTestPage_Headline}"
                   Style="{StaticResource Headline}"
                   HorizontalOptions="Center" />
            
            <Label Text="{x:Static res:AppResources.ResilienceTestPage_Description}"
                   Style="{StaticResource Body}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="Gray"
                   Margin="0,0,0,20" />

            <!-- Status -->
            <Border StrokeThickness="1" Stroke="LightGray" Padding="10" Margin="0,0,0,10">
                <Label Text="{Binding StatusMessage}"
                       FontSize="14"
                       TextColor="{Binding StatusColor}"
                       AutomationId="ResilienceTest_StatusMessage" />
            </Border>

            <!-- Buttons -->
            <Button Text="{x:Static res:AppResources.ResilienceTestPage_GetButton}"
                    Command="{Binding TestGetCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    AutomationId="ResilienceTest_GetButton"
                    HorizontalOptions="Fill" />

            <Button Text="{x:Static res:AppResources.ResilienceTestPage_PostButton}"
                    Command="{Binding TestPostCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    AutomationId="ResilienceTest_PostButton"
                    HorizontalOptions="Fill" />

            <Button Text="{x:Static res:AppResources.ResilienceTestPage_RetryButton}"
                    Command="{Binding TestRetryCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    AutomationId="ResilienceTest_RetryButton"
                    HorizontalOptions="Fill" />

            <Button Text="{x:Static res:AppResources.ResilienceTestPage_CircuitBreakerButton}"
                    Command="{Binding TestCircuitBreakerCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    AutomationId="ResilienceTest_CircuitBreakerButton"
                    HorizontalOptions="Fill" />

            <Button Text="{x:Static res:AppResources.ResilienceTestPage_DelayButton}"
                    Command="{Binding TestDelayCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    AutomationId="ResilienceTest_DelayButton"
                    HorizontalOptions="Fill" />

            <!-- Activity Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              AutomationId="ResilienceTest_ActivityIndicator"
                              HeightRequest="30"
                              Margin="0,10,0,0" />

            <!-- Results -->
            <Label Text="{x:Static res:AppResources.ResilienceTestPage_ResultsLabel}"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,20,0,10" />
            
            <Border StrokeThickness="1" Stroke="LightGray" Padding="10">
                <ScrollView>
                    <Label Text="{Binding Results}"
                           FontSize="12"
                           FontFamily="Courier New"
                           AutomationId="ResilienceTest_Results" />
                </ScrollView>
            </Border>

            <!-- Instructions -->
            <Label Text="{x:Static res:AppResources.ResilienceTestPage_InstructionsLabel}"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,20,0,10" />
            
            <Label Text="{x:Static res:AppResources.ResilienceTestPage_InstructionsText}"
                   FontSize="12"
                   TextColor="Gray"
                   Margin="0,0,0,10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

